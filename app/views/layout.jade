doctype
html(ng-app="App" ng-controller="RootCtrl as app")
  head
    base(href="/")
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='{{app.appData.description}}')
    title {{app.pageTitle.getTitle()}}
    link(rel="stylesheet", href="/css/production.css")
  body
    .navbar.navbar-default
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/") {{app.appData.name}}
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li(ng-class="{active:app.isActive('/')}")
              a(href="/") Home
            li(ng-class="{active:app.isActive('/users')}")
              a(href="/users") Users

    block content
    
    script(src="/js/production.js")
